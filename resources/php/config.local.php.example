<?php
/**
 * Local configuration template
 *
 * SETUP INSTRUCTIONS:
 * 1. Create directory: ../wineapp-config/ (outside web root)
 * 2. Copy this file to: ../wineapp-config/config.local.php
 * 3. Fill in your actual values below
 * 4. The config file will be loaded automatically by the app
 */

// Prevent direct access (defense in depth)
if (basename($_SERVER['PHP_SELF'] ?? '') === basename(__FILE__)) {
    http_response_code(403);
    die('Direct access forbidden');
}

// Environment: 'test' or 'prod'
// Use 'test' for development (connects to winelist_test database)
// Use 'prod' for production (connects to winelist database)
define('APP_ENV', 'test');

// Database credentials
define('DB_HOST', 'your-db-host');
define('DB_USER', 'your-username');
define('DB_PASS', 'your-password');

// Database name based on environment
if (APP_ENV === 'test') {
    define('DB_NAME', 'winelist_test');
} else {
    define('DB_NAME', 'winelist');
}

// API Keys
define('GEMINI_API_KEY', 'your-gemini-api-key');
?>
